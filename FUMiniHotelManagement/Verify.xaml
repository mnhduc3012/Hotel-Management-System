<Window x:Class="FUMiniHotelManagement.Verify"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FUMiniHotelManagement"
        mc:Ignorable="d"
        Title="Verify" Height="200" Width="300">
    <Window.Resources>
        <ResourceDictionary Source="StyleResource.xaml"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Verification" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="22" FontWeight="Bold" Foreground="LightSeaGreen"/>

        <StackPanel Grid.Row="1">
            <TextBox Width="200" Name="txtVerify"/>
            <Button Style="{StaticResource btnStyle1}" Height="30" Content="Verify" Width="100" Margin="0 20 0 0" Click="Button_Click"/>
        </StackPanel>
        
    </Grid>
</Window>
